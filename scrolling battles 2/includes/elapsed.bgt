class time_elapsed {
timer@handle;
int milliseconds;
int seconds;
int minutes;
int rest;

void set_timer(timer@counter) {
@handle=counter;
}

void refresh() {
milliseconds=handle.elapsed;
minutes=milliseconds/60000;
rest=milliseconds%60000;
seconds=rest/1000;
}

int m() {
refresh();
return minutes;
}

int s() {
refresh();
return seconds;
}

int ms() {
refresh();
return milliseconds;
}
}